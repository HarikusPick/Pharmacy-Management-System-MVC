@using eczane1.Models
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    İlaç Ekle
                </div>
                <div class="block-controls">
                    <a href="/Ilaclar/Index"></a>
                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <form action="/Ilaclar/Ekle" method="post" role="form">
                        @if (Model != null)
                        {
                            <input type="hidden" name="ilac_id" value="@Model.ilac_id" />

                        }

                        <div class="form-group">
                            <label for="exampleInputEmail1">İlaç Adı</label>
                            @if (Model.ilac_ad == null)
                            {
                                <input value="" type="text" class="form-control" placeholder="İlaç Adını Giriniz" name="ilac_ad">
                            }
                            else
                            {
                                <input value="@Model.ilac_ad" type="text" class="form-control" placeholder="İlaç Adını Giriniz" name="ilac_ad">
                            }
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">ilac kodu</label>
                            @if (Model.ilac_kod == null)
                            {
                                <input value="" type="number" class="form-control" placeholder="Tanimi bilgisi Giriniz" name="ilac_kod">
                            }
                            else
                            {
                                <input value="@Model.ilac_kod" type="number" class="form-control" placeholder="Tanimi bilgisi Giriniz" name="ilac_kod">
                            }
                        </div>




                        <div class="form-group">
                            @if (Model.ilac_skt == null)
                            {
                                <label for="exampleInputPassword1">ilac skt</label>
                                <input value="" type="date" class="form-control" name="ilac_skt">
                            }
                            else
                            {
                                <label for="exampleInputPassword1">ilac skt</label>
                                <input value="@Model.ilac_skt" type="date" class="form-control" name="ilac_skt">
                            }
                        </div>





                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyatı</label>
                            @if (Model.ilac_fiyat == null)
                            {
                                <input value="" type="text" class="form-control" placeholder="Fiyatı Giriniz" name="ilac_fiyat">
                            }
                            else
                            {
                                <input value="@Model.ilac_fiyat" type="text" class="form-control" placeholder="Fiyatı Giriniz" name="ilac_fiyat">
                            }
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Türü</label>
                            @if (Model.ilac_turu_id == null)
                            {
                                <input value="" type="number" class="form-control" placeholder="tür id Giriniz" name="ilac_turu_id">
                            }
                            else
                            {
                                <input type="number" value="@Model.ilac_turu_id" placeholder="tür id girin" class="form-control" name="ilac_turu_id">
                            }
                        </div>
                       

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>