@using eczane1.Models
@{
    ViewBag.Title = "TurEkle";
}
<h2>TurEkle</h2>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tür Ekle
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <form action="/Ilaclar/TurEkle" method="post" role="form">
                        @if (Model != null)
                        {
                            <input type="hidden" name="ilac_turu_id" value="@Model.ilac_turu_id" />

                        }

                        <div class="form-group">
                            <label for="exampleInputEmail1">İlaç Adı</label>
                            @if (Model.ilac_turu_ad == null)
                            {
                                <input value="" type="text" class="form-control" placeholder="Tür Adını Giriniz" name="ilac_turu_ad">
                            }
                            else
                            {
                                <input value="@Model.ilac_turu_ad" type="text" class="form-control" placeholder="Tür Adını Giriniz" name="ilac_turu_ad">
                            }
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>